<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_home_goods_LinearLayout"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.HomeGoodsFragment"
    android:background="#fff">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_home_goods_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"></android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_home_goods_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"></android.support.v7.widget.RecyclerView>


</LinearLayout>