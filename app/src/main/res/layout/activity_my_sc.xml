<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.my.MyScActivity">

    <RelativeLayout
        android:id="@+id/my_sc_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/my_sc_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="我的收藏"
            android:textColor="#FF333333"
            />
        <TextView
            android:id="@+id/my_sc_bj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/my_sc_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:visibility="gone"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_below="@+id/my_sc_tou"
        android:layout_above="@+id/my_sc_bottom"
        android:background="#fff"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/my_sc_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8"
        android:visibility="gone"
        >
        <RadioGroup
            android:id="@+id/my_sc_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/my_sc_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="完成"
                android:textSize="@dimen/dp_14"
                android:textColor="#323030"
                android:gravity="center"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/my_sc_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="删除"
                android:gravity="center"
                android:textSize="@dimen/dp_14"
                android:textColor="#323030"
                android:layout_weight="1"
                />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>