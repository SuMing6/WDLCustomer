<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/adapter_evaluate_data_SimpleDraweeView"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/adapter_evaluate_data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="@dimen/dp_12"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/adapter_evaluate_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="time"
                android:textColor="#999999"
                android:textSize="@dimen/dp_10"
                />
            <RatingBar
                android:layout_below="@+id/adapter_evaluate_data_name"
                android:layout_gravity="center"
                android:id="@+id/adapter_evaluate_data_RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginTop="@dimen/dp_6"
                />
            <TextView
                android:layout_below="@+id/adapter_evaluate_data_RatingBar"
                android:id="@+id/adapter_evaluate_data_neirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:textSize="@dimen/dp_12"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_16"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>