<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.HomeGoodsLeftAdapter"
    android:id="@+id/home_goods_lef_RelativeLayout"
    android:background="#F3F3F3"
    android:paddingBottom="@dimen/dp_1"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_11"
            android:paddingTop="@dimen/dp_13"
            android:background="#fff"
            >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/adapter_home_goods_right_SimpleDraweeView"
                    android:layout_width="@dimen/dp_115"
                    android:layout_height="@dimen/dp_115" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_11">
                        <TextView
                            android:id="@+id/adapter_home_goods_right_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="立白香氛洗衣粉1.2"
                            android:textColor="#333333"
                            android:textSize="@dimen/dp_14"
                            />
                        <TextView
                            android:id="@+id/adapter_home_goods_right_shou"
                            android:layout_below="@+id/adapter_home_goods_right_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#999999"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_17"
                            />
                        <TextView
                            android:id="@+id/adapter_home_goods_right_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="￥2 5 "
                            android:textSize="@dimen/dp_14"
                            android:textColor="#EF2635"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/adapter_home_goods_right_okx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可选规格"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/dp_12"
                            android:textColor="#FF9600"
                            android:padding="@dimen/dp_4"
                            android:background="@drawable/shape_homepage_goods_textview"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/adapter_home_goods_right_gwcar"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_mainactivity_button"
                            android:text="+"
                            android:gravity="center"
                            android:textColor="#fff"/>
                </RelativeLayout>

        </LinearLayout>
</RelativeLayout>