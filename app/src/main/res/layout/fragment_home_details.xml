<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.HomeGoodsFragment"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24">
                <TextView
                    android:id="@+id/fragment_home_details_addss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#333333"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/phone"/>
                    <TextView
                        android:id="@+id/fragment_home_details_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#FF9600"
                        /></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_24"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送时间："
                    android:textSize="@dimen/dp_12"
                    android:textColor="#333333"
                    />
                <TextView
                    android:id="@+id/fragment_home_details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/dp_12"/>
            </LinearLayout>
            <TextView
                android:id="@+id/fragment_home_details_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商户简介："
                android:textSize="@dimen/dp_12"
                android:textColor="#FF000000"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_10"
                android:textColor="#FF999999"
                android:layout_marginBottom="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关资历"
                android:textColor="#FF000000"
                android:textSize="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>