<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.SubmissionHBActivity">
    <RelativeLayout
        android:id="@+id/home_goods_submission_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/submission_dz_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="选择收货地址"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/submission_dz_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二七区"
        android:textColor="#333333"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_linerlayout"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前地理位置"
            android:textSize="@dimen/dp_14"
            android:textColor="#333333"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_10">
            <ImageView
                android:id="@+id/iinsdiansidnaid"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/submission_dz_dw"
                android:layout_marginTop="@dimen/dp_2"/>
            <TextView
                android:id="@+id/activity_submission_dz_name"
                android:layout_toRightOf="@+id/iinsdiansidnaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国河南省郑州是二七区连云港"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新定位"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_14"
                android:textColor="#FF9600"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/submission_dz_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

</LinearLayout>