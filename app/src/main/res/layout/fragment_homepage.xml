<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/homepage_activity"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_30"
    android:background="#F8F8F8">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/homepage_dingwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地位中..."
            android:textSize="@dimen/dp_12"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/homepage_shousuo"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_homepage_edittext"
            android:hint="请输入关键词"
            android:textSize="@dimen/dp_14"
            android:textColor="#A9A9A9"
            android:paddingLeft="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="7"/>
        <ImageView
            android:id="@+id/homepage_xiaoxi"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/homepage_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youth.banner.Banner
                android:id="@+id/homepage_Banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_157"
                ></com.youth.banner.Banner>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/homepage_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                ></android.support.v7.widget.RecyclerView>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/homepage_SimpleDraweeView"
                android:background="#000"
                android:layout_width="@dimen/dp_351"
                android:layout_height="@dimen/dp_94"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_216"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/homepage_SimpleDraweeView1"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_216"
                    android:background="#000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/homepage_SimpleDraweeView2"
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="@dimen/dp_105"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="#000"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/homepage_SimpleDraweeView3"
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="@dimen/dp_105"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="#000"
                        android:layout_marginTop="@dimen/dp_6"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="附近商家"
                android:textSize="@dimen/dp_16"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                />
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/homepage_XRecyclerView"
                android:layout_below="@+id/table_homepage_page_tuijian"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_10"
                ></com.jcodecraeer.xrecyclerview.XRecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    

</LinearLayout>