<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/eeeeeRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.HomeGoodsSubmissionActivity"
    android:background="#F8F8F8">

    <RelativeLayout
        android:id="@+id/home_goods_submission_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/home_goods_submission_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="提交订单"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_goods_submission_tou"
        android:layout_above="@+id/home_goods_submission_food">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/home_goods_submission_body"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_goods_submission_tou"
                android:layout_margin="@dimen/dp_12"
                android:padding="@dimen/dp_25"
                android:background="@drawable/shape_linerlayout"
                >
                <TextView
                    android:id="@+id/home_goods_submission_RelativeLayoutDz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"
                    android:text="请选择收货地址   >"
                    />
                <RelativeLayout
                    android:id="@+id/home_goods_submission_RelativeLayoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:text="送达时间"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/home_goods_submission_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="大约15：20送达"
                        android:layout_marginRight="@dimen/dp_17"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#FF9600"/>
                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/home_goods_submission_RelativeLayoutHB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:text="红包"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/home_goods_submission_HBtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="- 0.0"
                        android:layout_marginRight="@dimen/dp_17"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#FF9600"/>
                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/home_goods_submission_RelativeLayoutYH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:text="优惠券"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/home_goods_submission_YHtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="暂无可用优惠券"
                        android:layout_marginRight="@dimen/dp_17"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#FF9600"/>
                    <TextView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_goods_submission_body"
                android:layout_margin="@dimen/dp_12"
                android:padding="@dimen/dp_25"
                android:background="@drawable/shape_linerlayout"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_11"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1"
                    android:layout_marginBottom="@dimen/dp_20"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_goods_submission_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送费"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/home_goods_submission_peisong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免配送费"
                        android:textSize="@dimen/dp_16"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="餐盒打包费"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#333333"/>
                    <TextView

                        android:id="@+id/home_goods_submission_dabao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥ 0.0"
                        android:textSize="@dimen/dp_16"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首单立减"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/home_goods_submission_shoudan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-￥ 0.0"
                        android:textSize="@dimen/dp_16"
                        android:textColor="#EF2635"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_goods_submission_gong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共一件商品"
                        android:layout_centerHorizontal="true"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_12"/>
                    <TextView
                        android:id="@+id/home_goods_submission_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计￥00.0"
                        android:layout_alignParentRight="true"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_12"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1E1E1"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家备注："
                        android:textSize="@dimen/dp_14"
                        android:textColor="#333333"/>
                    <EditText
                        android:id="@+id/home_goods_submission_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="点击输入（选填）"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/home_goods_submission_food"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <TextView
            android:id="@+id/home_goods_submission_ljxd"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:background="#FF9600"
            android:text="立即下单"
            android:textColor="#fff"
            android:textSize="@dimen/dp_16"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/home_goods_submission_ljxd"
            android:layout_marginRight="@dimen/dp_35">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待支付："
                android:textSize="@dimen/dp_12"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/home_goods_submission_daizhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textSize="@dimen/dp_16"
                android:textColor="#EF2635"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>