<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.my.MyTicketActivity"
    android:background="#F8F8F8">

    <RelativeLayout
        android:id="@+id/my_ticket_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/my_ticket_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="红包卡券"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/my_ticket_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="#F8F8F8"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/my_ticket_ViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"></android.support.v4.view.ViewPager>

</LinearLayout>