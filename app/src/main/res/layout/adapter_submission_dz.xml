<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_linerlayout"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/adapter_submission_dz_LinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的收货地址"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">
                <TextView
                    android:id="@+id/adapter_submission_dz_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/adapter_submission_dz_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/adapter_submission_dz_xx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:text="地理详细位置"
                android:textSize="@dimen/dp_14"
                android:textColor="#666666"/></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F4F4F4"
            android:layout_marginTop="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_submission_dz_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置默认地址"
                android:textSize="@dimen/dp_12"
                android:layout_toLeftOf="@+id/adapter_submission_dz_bj"
                android:textColor="#333333"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"/>
            <TextView
                android:id="@+id/adapter_submission_dz_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="@dimen/dp_12"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_12"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>