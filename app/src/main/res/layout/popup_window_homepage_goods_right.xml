<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popup_window_homepage_goods_right_LinearLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        >
        <TextView
            android:id="@+id/popup_window_homepage_goods_right_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_mainactivity_button"
            android:text="x"
            android:gravity="center"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:id="@+id/popup_window_homepage_goods_right_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:textSize="@dimen/dp_14"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_11"
        />
    <TextView
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格"
        android:textSize="@dimen/dp_14"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_11"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_19"
        android:id="@+id/popup_window_homepage_goods_right_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:paddingTop="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:id="@+id/popup_window_homepage_goods_right_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#EF2635"
                android:textSize="@dimen/dp_15"/>
            <TextView
                android:id="@+id/popup_window_homepage_goods_right_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#EF2635"
                android:textSize="@dimen/dp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:id="@+id/popup_window_homepage_goods_right_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shape_mainactivity_button"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_mainactivity_button"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="一"
                    android:textColor="#ffff"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/popup_window_homepage_goods_right_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:text="1"
                android:background="@null"/>
            <RelativeLayout
                android:id="@+id/popup_window_homepage_goods_right_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shape_mainactivity_button"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_mainactivity_button"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="+"
                    android:textColor="#ffff"
                    />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/popup_window_homepage_goods_right_ok"
            android:layout_width="@dimen/dp_180"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_window_homepage_goods_right_x"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/shape_mainactivity_button"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="@dimen/dp_16" />
    </RelativeLayout>
</LinearLayout>