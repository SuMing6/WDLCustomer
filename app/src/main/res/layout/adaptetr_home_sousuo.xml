<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adapter.HomePageNearbyAdapter"
    android:paddingBottom="@dimen/dp_10"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/homepage_sousuo_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_19"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:background="@drawable/shape_linerlayout">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/homepage_sousuo_SimpleDraweeView"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19">
                <TextView
                    android:id="@+id/homepage_sousuo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高棉厨房"
                    android:textColor="#333"
                    android:textSize="@dimen/dp_16"
                    />
                <TextView
                    android:id="@+id/homepage_sousuo_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="12千米"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_9">
                <TextView
                    android:id="@+id/homepage_sousuo_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#EF2635"/>
                <TextView
                    android:id="@+id/homepage_sousuo_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售出2525"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">
                <TextView
                    android:id="@+id/homepage_sousuo_rise_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="起送￥15"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"/>
                <TextView
                    android:id="@+id/homepage_sousuo_match_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="起送￥15"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"/>
                <TextView
                    android:id="@+id/homepage_sousuo_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30分钟内"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#999999"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>