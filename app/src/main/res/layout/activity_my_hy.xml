<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.my.MyHyActivity"
    android:background="#FC5B28">

    <RelativeLayout
        android:id="@+id/commodity_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <TextView
            android:id="@+id/my_hy_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＜"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:id="@+id/commodity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="邀请好友"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:src="@mipmap/my_hy_image"/>
    <Button
        android:id="@+id/my_hy_yqhy"
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_42"
        android:background="@drawable/shape_mainactivity_button"
        android:text="分享邀请"
        android:textSize="@dimen/dp_16"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_25"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_45"
        >
        <RelativeLayout
            android:id="@+id/my_hy_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_159"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/my_hy_tou"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请说明"
                android:textSize="@dimen/dp_14"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_hy_nr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_my_hy_edittext"
            android:layout_marginTop="@dimen/dp_9"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:hint="邀请说明"
                android:textColor="#959595"
                android:textSize="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="#fff"/>
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>