<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_submission_yh_LinearLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">
            <LinearLayout
                android:id="@+id/activity_submission_yh_e"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/activity_submission_yh_SimpleDraweeView"
                    android:layout_width="@dimen/dp_57"
                    android:layout_height="@dimen/dp_57" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_13">
                    <TextView
                        android:id="@+id/activity_submission_yh_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:layout_marginTop="@dimen/dp_5"/>
                    <TextView
                        android:id="@+id/activity_submission_yh_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红包将在后31天有效"
                        android:layout_marginTop="@dimen/dp_5"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/activity_submission_yh_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textColor="#EF2635"
                android:textSize="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/activity_submission_yh_e"
                android:background="#F7F7F7"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅限本账号绑定的手机号下使用"
                android:layout_below="@+id/activity_submission_yh_e"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                />
        </RelativeLayout>
</LinearLayout>