<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.HomeSousuoLsActivity"
    android:paddingTop="@dimen/dp_30"
    android:background="#fff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/submission_sousuols_back"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_14"
            android:background="@drawable/back"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/home_sousuo_EditText"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_homepage_edittext"
            android:hint="请输入关键词"
            android:textSize="@dimen/dp_14"
            android:textColor="#A9A9A9"
            android:paddingLeft="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="7"/>
        <TextView
            android:id="@+id/home_sousuo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"
        android:layout_marginTop="@dimen/dp_7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/home_sousuo_LinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="历史搜索"
                android:textSize="@dimen/dp_14"
                android:textColor="#A9A9A9"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_sousuo_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>