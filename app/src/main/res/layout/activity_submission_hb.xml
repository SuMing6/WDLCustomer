<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homegoods.SubmissionHBActivity">
    <RelativeLayout
        android:id="@+id/home_goods_submission_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_30"
        android:background="#fff"
        android:paddingBottom="@dimen/dp_9"
        >
        <ImageView
            android:id="@+id/submission_hb_back"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_14"
            android:background="@drawable/back"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="红包"
            android:textColor="#FF333333"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/submission_hb_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红包"
        android:textColor="#333333"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_12"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/submission_hb_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

</LinearLayout>